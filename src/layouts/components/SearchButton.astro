---
import Button from "@components/Button.astro";
import Dialog from "@components/Dialog.astro";
import SearchIcon from "@components/icons/SearchIcon.astro";
import Search from "./Search.astro";
---

<Button open-dialog dialog-id="search" aria-label="Search articles">
  <SearchIcon class="h-5 fill-neutral-400" />
</Button>
<Dialog id="search" class="md:w-full md:max-w-lg">
  <div class="px-2 pt-3 text-neutral-500 dark:text-neutral-200">
    <Search />
  </div>
  <footer class="flex flex-row-reverse gap-2 p-1">
    <Button dialog-close class="p-2" custom-id="1234">Cancel</Button>
  </footer>
</Dialog>
