---
import GithubIcon from "@components/icons/GithubIcon.astro";
import LinkedinIcon from "@components/icons/LinkedinIcon.astro";
import RssIcon from "@components/icons/RssIcon.astro";
import XTwitterIcon from "@components/icons/XTwitterIcon.astro";
import type { Link } from "@utils/models/links.interface";
const year = new Date().getFullYear();

const web: Link[] = [
  { label: "Home", path: "/" },
  { label: "Blog", path: "/blog" },
  { label: "Explorar", path: "/explore" },
  { label: "Sobre mi", path: "/about" },
  { label: "Collections", path: "/collections" },
  { label: "Snippets", path: "/snippet" },
  { label: "Daily", path: "/daily" },
  { label: "Lista de tareas", path: "/todo" },
];

const resources: Link[] = [
  { label: "Rss", path: "/rss.xml" },
  { label: "Source code", path: "https://github.com/USpiri/uspiri.github.io" },
];
---

<footer
  class="mb-8 text-neutral-500 dark:text-neutral-400 text-sm px-5 flex flex-col items-center gap-4"
>
  <div class="flex items-center gap-4 flex-col sm:flex-row">
    <section class="flex items-center gap-3">
      <div class="avatar"></div>
      <a href="/" class="text-lg font-bold">Uriel Spiridione | Devlyz</a>
    </section>
    <section class="flex gap-4 items-center">
      <a
        href="/rss.xml"
        target="_blank"
        class="rounded-lg transition-all hover:scale-110 active:scale-90"
        title="Rss"
      >
        <RssIcon class="h-6" />
      </a>
      <a
        href="https://github.com/USpiri/"
        target="_blank"
        class="rounded-lg transition-all hover:scale-110 active:scale-90"
        title="Github"
      >
        <GithubIcon class="h-6" />
      </a>
      <a
        href="https://www.linkedin.com/in/urielspiridione/"
        target="_blank"
        class="rounded-lg transition-all hover:scale-110 active:scale-90"
        title="Linkedin"
      >
        <LinkedinIcon class="h-6" />
      </a>
      <a
        href="https://twitter.com/UrielSpiridione"
        target="_blank"
        class="rounded-lg transition-all hover:scale-110 active:scale-90"
        title="X Twitter"
      >
        <XTwitterIcon class="h-6" />
      </a>
    </section>
  </div>
  <div class="flex items-center flex-col gap-2">
    <section>
      <ul class="flex flex-wrap gap-x-3 justify-center">
        <li><p class="font-medium">Web:</p></li>
        {
          web.map((link) => (
            <li>
              <a
                href={link.path}
                class="font-bold hover:text-neutral-700 dark:hover:text-neutral-400 transition-all"
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </section>
    <section>
      <ul class="flex flex-wrap gap-x-3 justify-center">
        <li>
          <p class="font-medium">Recursos:</p>
        </li>
        {
          resources.map((link) => (
            <li>
              <a
                href={link.path}
                class="font-bold hover:text-neutral-700 dark:hover:text-neutral-400 transition-all"
                target="_blank"
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </div>
  <p class="text-center text-sm">
    &copy; {year}
    <span class="font-semibold"> Uriel Spiridione</span>
  </p>
</footer>

<style lang="scss">
  .avatar {
    width: 25px;
    height: 25px;
    border-radius: 100%;
    @apply bg-neutral-600 dark:bg-neutral-900 border border-neutral-600 relative;
    &::before {
      content: "";
      height: 4px;
      width: 4px;
      border-radius: 100%;
      @apply bg-neutral-400 dark:bg-neutral-500;
      position: absolute;
      top: 10px;
      left: 10px;
      animation: eye-movement 8s infinite ease;
    }
    &::after {
      content: "";
      height: 4px;
      width: 4px;
      border-radius: 100%;
      @apply bg-neutral-400 dark:bg-neutral-500;
      position: absolute;
      top: 10px;
      left: 20px;
      animation: eye-movement 8s infinite ease;
    }
  }
  @keyframes eye-movement {
    0% {
      transform: translateX(0px) translateY(0) scaleY(1);
    }
    20% {
      transform: translateX(2px) translateY(0) scaleY(1);
    }
    30% {
      transform: translateX(-2px) translateY(0) scaleY(1);
    }
    55% {
      transform: translateX(0px) translateY(4px) scaleY(1);
    }
    65% {
      transform: translateX(0px) translateY(0px) scaleY(0.5);
    }
    70% {
      transform: translateX(0px) translateY(0px) scaleY(1);
    }
    100% {
      transform: translateX(0px) translateY(0px) scaleY(1);
    }
  }
</style>
